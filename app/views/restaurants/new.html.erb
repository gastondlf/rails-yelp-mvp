<div class="container mb-3">
    <div class="row d-flex">
        <div class="col-8 shadow-lg p-2 bg-white mt-4 rounded">
            <div class="d-flex justify-content-between align-items-center">
                <h2>New Restaurant</h2>
            </div>
            <p> <%= link_to "Back", restaurants_path %></p>
            <hr>
            <div class="p-3">
                <%= simple_form_for (@restaurant) do |f| %>
                    <%= f.input :name %>
                    <%= f.input :address , label: ('<i class="fa-solid fa-location-dot"></i> Address:').html_safe %>
                    <%= f.input :phone_number, label: ('<i class="fa-solid fa-phone"></i> Phone number:').html_safe %>
                    <%= f.input :category, :collection => ["chinese", "italian", "japanese", "french", "belgian"] %>
                    <div class="d-flex justify-content-center">
                    <%= f.submit class: 'btn btn-primary mt-3' %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>